@using QuanLiCHTL.Models;
@model IEnumerable<huyhang>
@{
    ViewBag.Title = "hangdahuy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Hàng đã hủy trong tháng:</h4>
<div style="border: 3px white solid; border-radius:3px 3px;margin:20px;">
    <table class="table table-hover" style="overflow-y: scroll;margin:10px 0px 0px 10px;width:1050px">
        <thead>
            <tr>
                <th>STT</th>
                <th>Barcode</th>
                <th>Tên sản phẩm</th>
                <th>HSD</th>
                <th>Giá NCC</th>
                <th>Số lượng</th>
                <th>Tình trạng</th>
                <th>Số lượng đã hủy</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                int stt = 1;
                <tr>
                    <td>@stt</td>
                    <td>@item.barcode</td>
                    <td>@item.tensp</td>
                    <td>@item.hsd.Value.Day/@item.hsd.Value.Month/@item.hsd.Value.Year</td>
                    <td>@item.dongia</td>
                    <td>@item.soluong</td>
                    <td>@item.tinhtrang</td>
                    <td>@item.soluongdahuy</td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>

<p>Số lượng: @ViewBag.slhh</p>
<p>Chi phí: @ViewBag.chiphi</p>
